<% if !@subscription.cancelled? && !@subscription.pause? %>
  <%= button_link_to Spree.t(:pause), pause_admin_subscription_path(@subscription), class: 'btn-success', icon: 'hand', remote: true, method: :patch %>
<% elsif @subscription.pause? && !@subscription.cancelled? %>
  <%= button_link_to Spree.t(:activate), unpause_admin_subscription_path(@subscription), class: 'btn-success', icon: 'hand', remote: true, method: :patch %>
<% end %>

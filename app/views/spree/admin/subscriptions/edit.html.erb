<% content_for :page_title do %>
  <%= Spree.t(:editing_resource, resource: Spree::Subscription.model_name.human) %>
<% end %>

<% content_for :page_actions do %>
  <%#= back_to_list_button(Spree::Subscription.model_name.human, admin_subscription_path) %>
<% end %>

<%= render :partial => 'spree/admin/shared/error_messages', :locals => { :target => @subscription } %>

<%= form_for [:admin, @subscription] do |f| %>
  <div>
    <%= image_tag @subscription.variant.image %>
  </div>
  <%= render :partial => 'form', locals: { f: f } %>
  <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
<% end %>

$("#success_flash_message").addClass("hidden").html('');
$("#error_flash_message").addClass("hidden").html('');

<% if flash.now[:success] %>
  $('#success_flash_message').removeClass("hidden");
  $('#success_flash_message').html("<%= flash.now[:success] %>");
<% end %>

<% if flash.now[:error] %>
  $('#error_flash_message').removeClass("hidden");
  $('#error_flash_message').html("<%= flash.now[:error] %>")
<% end %>

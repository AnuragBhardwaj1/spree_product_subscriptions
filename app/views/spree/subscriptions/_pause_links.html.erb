<% if @subscription.paused? %>
  <%= link_to Spree.t(:activate), unpause_subscription_path(@subscription), class: "btn #{ btn_class } btn-success", remote: true, method: :patch %>
<% else %>
  <%= link_to Spree.t(:pause), pause_subscription_path(@subscription), class: "btn #{ btn_class } btn-warning", remote: true, method: :patch %>
<% end %>
